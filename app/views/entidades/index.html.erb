<%- model_class = Entidade -%>
<div>
  <%= link_to 'Nova entidade', new_entidade_path, :class => 'btn btn-success fa fa-plus-circle' %>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Entidades
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                  <table id="filter" width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Código</th>
                        <th><%= model_class.human_attribute_name(:nome) %></th>
                        <th><%= model_class.human_attribute_name(:cnpj) %></th>
                        <th><%= model_class.human_attribute_name(:cidade) %></th>
                        <th><%= model_class.human_attribute_name(:bairro) %></th>
                        <th><%= model_class.human_attribute_name(:rua) %></th>
                        <th><%= model_class.human_attribute_name(:numero) %></th>
                        <th><%= model_class.human_attribute_name(:telefone) %></th>
                        <th><%= model_class.human_attribute_name(:contato) %></th>
                        <th><%= model_class.human_attribute_name(:status) %></th>
                        <th><%= model_class.human_attribute_name(:ramo_id) %></th>
                        <th>Ações</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @entidades.each do |entidade| %>
                        <tr>
                          <td><%= link_to entidade.id, entidade_path(entidade) %></td>
                          <td><%= entidade.nome %></td>
                          <td><%= entidade.cnpj %></td>
                          <td><%= entidade.cidade %></td>
                          <td><%= entidade.bairro %></td> 
                          <td><%= entidade.rua %></td>
                          <td><%= entidade.numero %></td>
                          <td><%= entidade.telefone %></td>
                          <td><%= entidade.contato %></td>
                          <td>
                          <%= case entidade.status 
                              when 1 then 'Ativo' 
                              when 0 then 'Inativo' 
                              else entidade.status end %>
                          </td>
                          <td><%= entidade.ramo.nome %></td>
                          <td>
                            <%= link_to 'Detalhes', entidade, :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Editar', edit_entidade_path(entidade), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Excluir', entidade, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => 'btn btn-danger btn-xs'%>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>