<%- model_class = Reserva -%>
<div class="panel panel-success">
  <div class="panel-heading"><h2>Reserva</h2></div>
  <div class="panel-body">
    <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
    <input type="text" name="data" class="form-control" disabled="true" value="<%= @reserva.data.strftime("%d/%m/%Y") %>">
    <dt><strong><%= model_class.human_attribute_name(:hora_inicio) %>:</strong></dt>
    <input type="text" name="hora_inicio" class="form-control" disabled="true" value="<%= @reserva.hora_inicio.strftime("%H:%M") %>">
    <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
    <input type="text" name="telefone" class="form-control" disabled="true" value="<%= @reserva.telefone %>">
    <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
    <input type="text" name="status" class="form-control" disabled="true" value="<%= @reserva.status %>">
    <dt><strong>Serviço:</strong></dt>
    <input type="text" name="servico" class="form-control" disabled="true" value="<%= @reserva.lista_preco.servico.nome %>">
    <dt><strong><%= model_class.human_attribute_name(:profissional_id) %>:</strong></dt>
    <input type="text" name="profissiona_id" class="form-control" disabled="true" value="<%= @reserva.profissional.nome %>">
    <dt><strong>Cliente:</strong></dt>
    <input type="text" name="cliente" class="form-control" disabled="true" value="<%= @reserva.user.nome %>"></br>
    <%= link_to t('Voltar'),
                reservas_path, :class => 'btn btn-default'  %>
    <%= link_to t('Editar'),
                  edit_reserva_path(@reserva), :class => 'btn btn-default' %>
    <%= link_to t('Excluir'),
                  reserva_path(@reserva),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
                  :class => 'btn btn-danger' %>
  </div>
</div>