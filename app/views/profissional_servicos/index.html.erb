<%- model_class = ProfissionalServico -%>
<div>
  <%= link_to 'Novo profissional serviço', new_profissional_servico_path, :class => 'btn btn-success fa fa-plus-circle' %>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Profissionais e serviços
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                  <table id="filter" width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Código</th>
                        <th><%= model_class.human_attribute_name(:profissional_id) %></th>
                        <th>Serviço</th>
                        <th>Ações</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @profissional_servicos.each do |profissional_servico| %>
                        <tr>
                          <td><%= link_to profissional_servico.id, profissional_servico_path(profissional_servico) %></td>
                          <td><%= profissional_servico.profissional.nome %></td>
                          <td><%= profissional_servico.lista_preco.servico.nome %></td>
                          <td>
                            <%= link_to 'Detalhes', profissional_servico, :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Editar', edit_profissional_servico_path(profissional_servico), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Excluir', profissional_servico, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => 'btn btn-danger btn-xs'%>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>