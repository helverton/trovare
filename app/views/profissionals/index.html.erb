<%- model_class = Profissional -%>
<div>
  <%= link_to 'Novo profissional', new_profissional_path, :class => 'btn btn-success fa fa-plus-circle' %>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Profissionais
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                  <table id="filter" width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Código</th>
                        <th><%= model_class.human_attribute_name(:nome) %></th>
                        <th><%= model_class.human_attribute_name(:email) %></th>
                        <th><%= model_class.human_attribute_name(:telefone) %></th>
                        <th><%= model_class.human_attribute_name(:status) %></th>
                        <th>Ações</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @profissionals.each do |profissional| %>
                        <tr>
                          <td><%= link_to profissional.id, profissional_path(profissional) %></td>
                          <td><%= profissional.nome %></td>
                          <td><%= profissional.email %></td>
                          <td><%= profissional.telefone %></td>
                          <td>
                          <%= case profissional.status 
                              when 1 then 'Ativo' 
                              when 0 then 'Inativo' 
                              else profissional.status end %>
                          </td>
                          <td>
                            <%= link_to 'Detalhes', profissional, :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Editar', edit_profissional_path(profissional), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Excluir', profissional, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => 'btn btn-danger btn-xs'%>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>
