<%- model_class = Servico -%>
<div>
  <%= link_to 'Novo serviço', new_servico_path, :class => 'btn btn-success fa fa-plus-circle' %>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Serviços
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                  <table id="filter" width="100%" class="table table-striped table-bordered table-hover">  
                    <thead>
                      <tr>
                        <th>Código</th>
                        <th><%= model_class.human_attribute_name(:nome) %></th>
                        <th>Descrição</th>
                        <th><%= model_class.human_attribute_name(:status) %></th>
                        <th>Ações</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @servicos.each do |servico| %>
                        <tr>
                          <td><%= link_to servico.id, servico_path(servico) %></td>
                          <td><%= servico.nome %></td>
                          <td><%= servico.descricao %></td>
                          <td>
                          <%= case servico.status 
                              when 1 then 'Ativo' 
                              when 0 then 'Inativo' 
                              else servico.status end %>
                          </td>
                          <td>
                            <%= link_to 'Detalhes', servico, :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Editar', edit_servico_path(servico), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Excluir', servico, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => 'btn btn-danger btn-xs'%>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>