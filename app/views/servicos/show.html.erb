<%- model_class = Servico -%>
<div class="page-header">
  <h1>Serviço</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @servico.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @servico.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @servico.status %></dd>

</dl>

<%= link_to t('Voltar'),
              servicos_path, :class => 'btn btn-default'  %>
<%= link_to t('Editar'),
              edit_servico_path(@servico), :class => 'btn btn-default' %>
<%= link_to t('Excluir'),
              servico_path(@servico),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
              :class => 'btn btn-danger' %>
