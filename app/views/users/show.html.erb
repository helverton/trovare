<%- model_class = User -%>
<div class="page-header">
  <h1>Usuário</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @user.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @user.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @user.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entidade_id) %>:</strong></dt>
  <dd><%= @user.entidade_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password_digest) %>:</strong></dt>
  <dd><%= @user.password_digest %></dd>
</dl>

<%= link_to t('Voltar'),
              users_path, :class => 'btn btn-default'  %>
<%= link_to t('Editar'),
              edit_user_path(@user), :class => 'btn btn-default' %>
<%= link_to t('Excluir'),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
              :class => 'btn btn-danger' %>
