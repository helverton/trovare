<%- model_class = User -%>
<div>
  <%= link_to 'Novo usuário', new_user_path, :class => 'btn btn-success fa fa-plus-circle' %>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Usuários
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                  <table id="filter" width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Código</th>
                        <th><%= model_class.human_attribute_name(:nome) %></th>
                        <th><%= model_class.human_attribute_name(:email) %></th>
                        <th><%= model_class.human_attribute_name(:tipo) %></th>
                        <th><%= model_class.human_attribute_name(:status) %></th>
                        <th>Ações</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @users.each do |user| %>
                        <tr>
                          <td><%= link_to user.id, user_path(user) %></td>
                          <td><%= user.nome %></td>
                          <td><%= user.email %></td>
                          <td>
                          <%= case user.tipo 
                              when 1 then 'Master' 
                              when 2 then 'Administrador'
                              when 3 then 'Usuário'
                              when 4 then 'Cliente' 
                              else user.tipo end %>
                          </td>
                          <td>
                          <%= case user.status 
                              when 1 then 'Ativo' 
                              when 0 then 'Inativo' 
                              else user.status end %>
                          </td>
                          <td>
                            <%= link_to 'Detalhes', user, :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Editar', edit_user_path(user), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => 'btn btn-danger btn-xs'%>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>