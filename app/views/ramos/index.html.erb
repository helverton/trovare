<%- model_class = Ramo -%>
<div>
  <%= link_to 'Novo ramo', new_ramo_path, :class => 'btn btn-success fa fa-plus-circle' %>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Ramos
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                  <table id="filter" width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Código</th>
                        <th><%= model_class.human_attribute_name(:nome) %></th>
                        <th>Descrição</th>
                        <th>Ações</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @ramos.each do |ramo| %>
                        <tr>
                          <td><%= link_to ramo.id, ramo_path(ramo) %></td>
                          <td><%= ramo.nome %></td>
                          <td><%= ramo.descricao %></td>
                          <td>
                            <%= link_to 'Detalhes', ramo, :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Editar', edit_ramo_path(ramo), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Excluir', ramo, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => 'btn btn-danger btn-xs'%>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>